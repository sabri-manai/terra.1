<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 style=" color: #CF9817;  font-family: Diavlo Light , Diavlo , sans-serif ;  " class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Add a new supplier
        </h1>
            <hr>
       
            <%- include('../partials/flashMessages') -%>     
            
            <form  action="/suppliers/createSupplier" method="post">
             
                <div class="form-group">
                    <label for="name">Supplier name</label>
                    <input type="text" name="name" id="name" value="<%= user.mobile%>" class="form-control">
                </div>
               
                <div class="form-group">
                    <label for="productName">Product name</label>
                    <input type="text" name="productName" id="productName" class="form-control">
                </div>

                <div class="form-group">
                    <label for="price">Price of one unity </label>
                    <input type="text" name="price" id="price" class="form-control">
                </div>

                <div class="form-group">
                    <label for="phone">Phone </label>
                    <input type="text" name="phone" id="phone" class="form-control">
                </div>

                <div class="form-group">
                    <label for="email">Supplier email </label>
                    <input type="text" name="email" id="email" class="form-control">
                </div>
                    
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-warning  btn-block"> Add supplier</button>
                </div>       
            </form>

            
        </div>
    </div>
</div>

    
<%- include('../partials/contact') -%>
<%- include('../partials/footer') -%>
<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>

<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 style=" color: #CF9817;  font-family: Diavlo Light , Diavlo , sans-serif ;  "  class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Add a new Article
        </h1>
            <hr>
       
            <%- include('../partials/flashMessages') -%>      
            <form  action="/articles/create" method="post">
                        <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" name="title" id="tile" placeholder="Name this article" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="subject">Subject</label>
                            <input type="text" name="subject" id="subject" placeholder="subject of the article" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="description">Description</label>
                           <textarea name="description" rows="4" placeholder="Write a small description of the article" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="content">Contet</label>
                           <textarea name="content" rows="10" placeholder="Write your article here..." class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                                <label for="date">Date</label>
                                <input type="date" name="date" id="date" class="form-control">
                        </div>

                        <div class="form-group">
                                <label for="location"> <i class="fas fa-location-arrow"></i> Location</label>
                                <input type="text" name="location" id="location" placeholder="Please choose the location of your event!" class="form-control">
                        </div>
                    
                        <div class="form-group">
                        <button type="submit" class="btn btn-outline-warning  btn-block"> Upload </button>
                        </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/contact') -%>
<%- include('../partials/footer') -%>
<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="container">
    <div class="row mt-4">
        <div class="col-md-9 offset-md-3">
            <h1 style=" color: #CF9817;  font-family: Diavlo Light , Diavlo , sans-serif ;  text-align: center; " >Edit the Event:</h1>
            <hr>
       
            <div class="container">
                <div class="col-md-3">
                    <img  src="<%= '/images/' + article.articlePic%>" height="150px" width="399px"    >    
                </div>
                <br><br>
        
                <div class="form-group">
                <div class="col-md-9">
                    <form action="/articles/uploadArticlePic" method="POST" enctype="multipart/form-data">
                   <h5 style=" color: #CF9817;  font-family: Diavlo Light , Diavlo , sans-serif ;  text-align: center; " >Update article picture</h5>
                    <input type="hidden" name="id" value="<%=article.id%>">
                    <input type="file" name="articlePic" id="articlePic" onchange="readURL(this)">    
                    <br><br>
                    <h5 style=" color: #CF9817;  font-family: Diavlo Light , Diavlo , sans-serif ;  text-align: center; " >Image Preivew</h5>
                    <img src="#" alt="" id="imagePlaceholder"  height="200px" width="200px" style="display: none;">
                    <br>
                    <button type="submit" class="btn btn-warning" disabled> <head>
                        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
                        <script>
                    $('input[type=file]').change(function(){
                                    if($('input[type=file]').val()==''){
                                        $('button').attr('disabled',true)
                                    } 
                                    else{
                                      $('button').attr('disabled',false);
                                    }})
                        </script>
                    </head>Upload</button>
                    </div>  
                </div>  
                </form>
                    <hr>
                </div>
                    
            
            
            <form  action="/articles/update" method="post">
               
                <input type="hidden" name="id" value="<%=article.id%>">
                
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%=article.title%>"  class="form-control">
            </div>

            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" name="subject" id="subject" value="<%=article.subject%>"  class="form-control">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
               <input type="text" name="description" rows="4" value="<%=article.description%>"  class="form-control">
            </div>

            <div class="form-group">
               <label for="content">Contet</label>
               <input type="text" name="content"  value="<%=article.content%>" class="form-control">
            </div>

            <div class="form-group">
                    <label for="date">Date</label>
                    <input type="date" name="date" value="<%=article.date%>" id="date" class="form-control">
            </div>

            <div class="form-group">
                    <label for="location"> <i class="fas fa-location-arrow"></i> Location</label>
                    <input type="text" name="location"  value="<%=article.location%>"id="location"  class="form-control">
            </div>


                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-warning  btn-block"> Update</button>
                    </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/contact') -%>
<%- include('../partials/footer') -%>
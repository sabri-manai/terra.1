<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 style=" color: #CF9817;  font-family: Diavlo Light , Diavlo , sans-serif ;  "  class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Add a new product
        </h1>
            <hr>

            <form  action="/products/createProduct" method="post">
             
                <div class="form-group">
                    <label for="productId">Product Id</label>
                    <input type="text" name="productId" id="productId" class="form-control">
                </div>
               
                <div class="form-group">
                    <label for="productName">Title</label>
                    <input type="text" name="productName" id="productName" class="form-control">
                </div>

                <div class="form-group">
                    <label for="price">Price </label>
                    <input type="text" name="price" id="price" class="form-control">
                </div>

                <div class="form-group">
                    <label for="productDescription">Description </label>
                    <input type="text" name="productDescription" id="productDescription" class="form-control">
                </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-warning  btn-block"> Add product</button>
                    </div>       
            </form>

            
        </div>
    </div>
</div>

    
<%- include('../partials/contact') -%>
